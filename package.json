{
  "name": "fivem-ts-preact-boilerplate",
  "version": "1.0.0",
  "description": "Typescript Boilerplate for FiveM with a Preact-powered NUI",
  "main": "index.js",
  "repository": "https://github.com/Ascent-Gaming/fivem-ts-preact",
  "contributors": [
    "d0p3t <d0p3t@users.noreply.github.com>",
    "realStandal <realStandal@users.noreply.github.com>"
  ],
  "scripts": {
    "build:nui:styles": "cross-env NODE_ENV=production postcss src/html/styles/style.css -o src/html/styles/dist/styles.css",
    "build:nui": "npm run build:nui:styles",
    "build:script": "webpack --mode production",
    "watch:nui:styles": "postcss -w src/html/styles/style.css -o src/html/styles/dist/style.css",
    "watch:script": "webpack --mode development --watch true",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@citizenfx/client": "^1.0.2792-1",
    "@citizenfx/server": "^1.0.2792-1",
    "@types/node": "^14.0.27",
    "fivem-js": "^1.5.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^2.34.0",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "postcss": "^8.2.8",
    "prettier": "^2.0.5",
    "remove-files-webpack-plugin": "^1.4.3",
    "tailwindcss": "^2.0.4",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
